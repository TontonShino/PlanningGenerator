@model PlanningGenerator.Models.Pln.GroupEmpCat

@{
    ViewData["Title"] = "Suppression de groupe";
}
<div class="container">
    <h2>Suppression</h2>

    <h3>Êtes vous sur de vouloir supprimer ce groupe?</h3>
</div>
<div>
    <h4>Groupe</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nom du groupe
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <form asp-action="DeleteGroup">
        <input type="hidden" asp-for="Id" />
        <div class="btn-group">
            <input type="submit" value="Supprimer" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </form>
</div>
